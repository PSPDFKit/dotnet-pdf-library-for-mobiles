<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dotnet_pdf_library_for_mobiles.PDFPage"
             xmlns:pspdfKit="clr-namespace:dotnet_pdf_library_for_mobiles"
             Title="PSPDFKit PDF Viewer">
    <Grid RowDefinitions="50, 50, *">
        <Label Text = "Custom controls ... " />
        <Button x:Name="LoadDocumentButton" Text = "Load document" Grid.Row="1" />
        <pspdfKit:PdfView x:Name="PdfView" Grid.Row="2"/>
    </Grid>
</ContentPage>